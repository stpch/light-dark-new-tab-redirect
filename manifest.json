{
    "manifest_version": 3,
    "name": "Light/Dark New Tab Redirect",
    "version": "1.0.0",
    "permissions": [
        "storage"
    ],
    "description": "Redirects new tabs to a custom URL with support for light/dark mode.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "options_page": "options.html",
    "chrome_url_overrides": {
        "newtab": "redirect.html"
    }
}
